    .row.well
      .row
        .span12
          cats = ['Aluminum', 'Copper', 'Engineering Polymers', 'Commodity Polymers', 'Nickel']
          for c in category
            for cat in cats
              if c.name == cat
                .pointSpan
                  #points
                    ul.unstyled
                      p
                        strong= c.name
                      for p in c.products
                        li
                          a(href="/products/#{p.url}") #{p.name}
