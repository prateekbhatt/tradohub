extends layout
block indexPage
  .jumbotron
    .container
      br
      br
      h2 Empowering small businesses to succeed in India
      br
      p.lead 
        span Join together with other small businesses, and procure your raw materials
        br 
        span 
        em(style="border-bottom: 2px solid white;") at low prices that only large companies get.    

      br
      a.btn.btn-large.btn-success(href="/register") Get Started Today
    br
    br
  br
  .container
    .row.well
      .row
        .span12
          cats = ['Aluminum', 'Copper', 'Engineering Polymers', 'Commodity Polymers', 'Nickel']
          - for c in category
            - for cat in cats
                if c.name == cat
                  .pointSpan
                    #points
                      ul.unstyled
                        p
                          strong= c.name
                        for p in c.products
                          li
                            a(href="/products/#{p.url}") #{p.name}
                  - break
      .row
        .span12.text-center
          a(href="/products")
            h4 See All Products &rarr;
          hr
        .span5.offset1.text-center
          include _newProductRequest
        .span5.text-center
          strong
            small Are you a manufacturer / supplier ?
              br
              a(href="/partners") Partner with Us.

    .row.well
      legend.text-center How it works ?
      .row
        .span12
          img(src="img/tradohub-hiw.png")
