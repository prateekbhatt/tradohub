doctype 5
html(lang="en", ng-app='tradohub')
  head
    meta(charset="utf-8")
    title Tradohub.com
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='#{staticFiles.mainCss}')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')

  body
    #wrap
      include _navbar
      #content-wrap
        .container
          include _flash
          block partial
        block indexPage
      
      #push
      
    script(type="text/javascript", src="#{staticFiles.mainJs}")
    block script

    //- Select2 search bar start
    script(type="text/javascript")
      $('.select2').select2({ placeholder : '' });

    //- select2 end

    //- Freshdesk Support Widget start
    include _freshDesk

    //- Freshdesk end

    //- Google analytics start
    include _googleAnalytics
    //- google analytics end

    #footer
      .container
        include _footer