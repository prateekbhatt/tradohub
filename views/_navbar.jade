.navbar.navbar-fixed-top
  .navbar-inner
    .container
      a.brand(href='/')
        em
          strong TRADOHUB
      ul.nav.pull-left
        li.dropdown
          a.dropdown-toggle(data-toggle="dropdown", href="/products", onclick="location = '/products'") Products
            b.caret
          ul.dropdown-menu
            for c in category
              li.dropdown-submenu
                a(href="#")= c.name
                ul.dropdown-menu
                  for p in c.products
                    li: a(href="/products/#{p.url}")= p.name
            li.divider
            li: a(href="/products") All Products

      form.navbar-search.pull-left
        select.select2.search-bar#single(onchange="location = this.options[this.selectedIndex].value;")
          option Search Products
          for c in category
            for p in c.products
              option(value="/products/#{p.url}") #{p.name}
      ul.nav.pull-left
        li: a(href='/quote') Request Quote

      if user
        ul.nav.pull-right
          li: a(href='/quote') #{user.name.first}
          li: a(href='/logout') Logout
      else
        ul.nav.pull-right
          li: a(href='/login') Login
          li: a(href='/register') Register