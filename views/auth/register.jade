extends ../layout

block partial
  .row.form-signin
    .span5
      legend CREATE A NEW ACCOUNT
      include _infoBar

    .span5.well.pull-right(style="background-color:#F0F0F0;")
      form(name="registerForm", method="POST", action="/register", enctype="multipart/form-data")

        label(for="name") Your Name        
        input.input-medium#name(type="text", name="name[first]", placeholder="First Name", autofocus)
        input.input-medium.pull-right(type="text", name="name[last]", placeholder="Last Name")
        br

        label(for="email") Your Email
        input.input-block-level#email(type="email", name="email", placeholder="Email Address")
        br

        label(for="password") Password
        input.input-block-level#password(type="password", name="password", placeholder="Password")
        br

        label(for="company") Company Name
        input.input-block-level#company(type="text", name="company[name]", placeholder="Company Name", required)
        br

        label(for="state") State
        select.input-block-level#state(name="company[state]", required)
          option(value="IND") India

        label(for="mobile") Mobile Number
        .input-prepend
          span.add-on +91 - 
          input.input-block-level#mobile(type="number", name="", placeholder="Mobile No.")
        br

        label(for="landline") Landline Number
        input.input-small#landline(type="number", name="", placeholder="Area Code")
        input.input-medium(type="number", name="", placeholder="Number")
        br

        label(for="industry") Industry
        select.input-block-level#industry(name="company[industry]", required)
          option(value="IND") India

        button.btn.btn-block.btn-large.btn-primary(type="submit")
          span Create Account
        br
        small By creating an account you agree to our 
          a(href="/about/terms") Terms 
          span and 
          a(href="/about/privacy") Privacy Policy