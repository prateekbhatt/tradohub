extends ../layout

block partial
  .row.form-signin
    .span5
      legend CREATE A NEW ACCOUNT
      include _infoBar
      br
      br
      h5 
        strong Are you a manufacturer / supplier? 
          a(href="/partners") Partner With Us.

    .span5.well.pull-right(style="background-color:#F0F0F0;")
      form(method="POST", action="/register")

        label(for="name") Your Name        
        input.input-medium#name(type="text", name="name[first]", placeholder="First Name", autofocus, required)
        input.input-medium.pull-right(type="text", name="name[last]", placeholder="Last Name", required)
        br

        label(for="email") Your Email
        input.input-block-level#email(type="email", name="email", placeholder="Email Address", required)
        br

        label(for="password") Password
        input.input-block-level#password(type="password", name="password", placeholder="Password", required)
        br

        label(for="company") Company Name
        input.input-block-level#company(type="text", name="company[name]", placeholder="Company Name", required, required)
        br

        label(for="state") State
        select.input-block-level#state(name="company[state]", required)
          option(value="IND") India

        label(for="mobile") Mobile Number
        .input-prepend
          span.add-on +91 - 
          input.input-block-level#mobile(type="number", name="contact[mobile]", placeholder="Mobile No")
        br

        label(for="landline") Landline Number
        input.input-small#landline(type="number", name="contact[landline][area]", placeholder="Area Code")
        input.input-medium(type="number", name="contact[landline][no]", placeholder="Number")
        br

        label(for="industry") Industry
        select.input-block-level#industry(name="company[industry]", required)
          option(value="IND") India

        button.btn.btn-block.btn-large.btn-success(type="submit")
          span Create Account
        br
        small By creating an account you agree to our 
          a(href="/about/terms") Terms 
          span and 
          a(href="/about/privacy") Privacy Policy