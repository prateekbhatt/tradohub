extends ../index
block partial

  div.span2.well
    include sidenav

  div.span9.well
    .lead Order Detail
    table.table
      tbody
        tr
          td Order ID
          td #{txn.tid}
        tr
          td Query Date
          td #{txn.created.toDateString()}
        tr
          td Status
          td #{txn.status}
        tr
          td More Information
          td #{txn.info || '-'}

    .lead Products
    table.table
      thead
        tr
          th Name
          th Specification
          th Quantity
          th Bid Price
          th Quote Price
      tbody
        for p in txn.products
          tr
            td #{p.name}
            td #{p.specs}
            td #{p.quantity + ' ' + p.unit}
            td #{'$ ' + p.bid}
            td #{p.quote}


    br

    .lead Shipping and Payment
    table.table
      tbody
        tr
          td Destination Port
          td #{txn.shipping.destPort}
        tr
          td Requirement Within
          td #{txn.shipping.reqDue.toDateString()}
        tr
          td Shipping Terms
          td #{txn.shipping.terms}
        tr
          td Payment Terms
          td #{txn.payment.terms}
        

    .lead Company

    address
      strong #{txn.company.name}
      br
      span #{txn.company.street}
      br
      span #{txn.company.city + ' , ' + txn.company.state}
      br
      span #{txn.company.country + ' ' + txn.company.zip}
  
    .lead Contact
    p #{txn.contact.name.first + ' ' + txn.contact.name.last}
    p Phone:&nbsp;&nbsp;
      span #{txn.contact.phone.country + '-' + txn.contact.phone.area + '-' + txn.contact.phone.number}
    p Email:&nbsp;&nbsp;
      span #{txn.contact.email}